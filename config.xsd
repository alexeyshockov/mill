<?xml version="1.0" encoding="utf-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:element name="mill" type="MillType" />

    <xs:complexType name="MillType">
        <xs:group ref="group.config"/>
        <xs:attributeGroup ref="group.config.attribute"/>
    </xs:complexType>

    <xs:attributeGroup name="group.config.attribute">
        <xs:attribute name="name" type="xs:string" use="required" />
        <xs:attribute name="bootstrap" type="xs:string" use="required" />
    </xs:attributeGroup>

    <xs:group name="group.config">
        <xs:all>
            <xs:element name="info" type="component.info" minOccurs="1" maxOccurs="1" />
            <xs:element name="servers" type="component.servers" minOccurs="1" maxOccurs="1" />

            <xs:element name="versions" type="component.versions" minOccurs="1" maxOccurs="1" />

            <xs:element name="compilers" type="component.compilers" minOccurs="0" maxOccurs="1" />

            <xs:element name="controllers" type="component.controllers" minOccurs="1" maxOccurs="1" />
            <xs:element name="representations" type="component.representations" minOccurs="1" maxOccurs="1" />

            <xs:element name="scopes" type="component.scopes" minOccurs="0" maxOccurs="1" />
            <xs:element name="parameterTokens" type="component.parametertokens" minOccurs="0" maxOccurs="1" />
            <xs:element name="pathParams" type="component.pathparams" minOccurs="0" maxOccurs="1" />
            <xs:element name="vendorTags" type="component.vendorTags" minOccurs="0" maxOccurs="1" />
        </xs:all>
    </xs:group>

    <xs:complexType name="component.info">
        <xs:sequence>
            <xs:element name="terms" minOccurs="0" maxOccurs="1">
                <xs:complexType>
                    <xs:attribute name="url" type="xs:string" use="required" />
                </xs:complexType>
            </xs:element>

            <xs:element name="contact" minOccurs="1" maxOccurs="1">
                <xs:complexType>
                    <xs:attribute name="name" type="xs:string" use="optional" />
                    <xs:attribute name="email" type="xs:string" use="optional" />
                    <xs:attribute name="url" type="xs:string" use="required" />
                </xs:complexType>
            </xs:element>

            <xs:element name="externalDocs" minOccurs="0" maxOccurs="1">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="externalDoc" minOccurs="1" maxOccurs="unbounded">
                            <xs:complexType>
                                <xs:simpleContent>
                                    <xs:extension base="xs:string">
                                        <xs:attribute name="name" type="xs:string" use="required" />
                                        <xs:attribute name="url" type="xs:string" use="required" />
                                    </xs:extension>
                                </xs:simpleContent>
                            </xs:complexType>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="component.servers">
        <xs:sequence>
            <xs:element name="server" minOccurs="1" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:simpleContent>
                        <xs:extension base="xs:string">
                            <xs:attribute name="url" type="xs:string" use="required" />
                            <xs:attribute name="description" type="xs:string" use="required" />
                        </xs:extension>
                    </xs:simpleContent>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="component.versions">
        <xs:choice>
            <xs:element name="version" minOccurs="1" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:simpleContent>
                        <xs:extension base="xs:string">
                            <xs:attribute name="name" type="xs:string" use="required" />
                            <xs:attribute name="releaseDate" type="xs:date" use="required" />
                            <xs:attribute name="default" type="xs:boolean" use="optional" />
                        </xs:extension>
                    </xs:simpleContent>
                </xs:complexType>
            </xs:element>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="component.compilers">
        <xs:sequence>
            <xs:element name="excludes" minOccurs="0" maxOccurs="1">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="exclude" minOccurs="1" maxOccurs="unbounded">
                            <xs:complexType>
                                <xs:attribute name="group" type="xs:string" use="required" />
                            </xs:complexType>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="component.controllers">
        <xs:choice>
            <xs:element name="filter">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="directory" minOccurs="0" maxOccurs="unbounded">
                            <xs:complexType>
                                <xs:attribute name="name" type="xs:string" use="required" />
                                <xs:attribute name="suffix" type="xs:string" default=".php" />
                            </xs:complexType>
                        </xs:element>
                        <xs:element name="class" minOccurs="0" maxOccurs="unbounded" >
                            <xs:complexType>
                                <xs:attribute name="name" type="xs:string" use="required" />
                            </xs:complexType>
                        </xs:element>
                        <xs:element name="excludes" type="common.excludes" minOccurs="0" maxOccurs="unbounded" />
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="component.representations">
        <xs:sequence>
            <xs:element name="filter">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="directory" minOccurs="0" maxOccurs="unbounded">
                            <xs:complexType>
                                <xs:attribute name="name" type="xs:string" use="required" />
                                <xs:attribute name="method" type="xs:string" use="required" />
                                <xs:attribute name="suffix" type="xs:string" default=".php" />
                            </xs:complexType>
                        </xs:element>
                        <xs:element name="class" minOccurs="0" maxOccurs="unbounded">
                            <xs:complexType>
                                <xs:attribute name="name" type="xs:string" use="required" />
                                <xs:attribute name="method" type="xs:string" use="required" />
                            </xs:complexType>
                        </xs:element>
                        <xs:element name="excludes" type="common.excludes" minOccurs="0" maxOccurs="unbounded" />
                    </xs:sequence>
                </xs:complexType>
            </xs:element>

            <xs:element name="errors" minOccurs="0" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="class" minOccurs="1" maxOccurs="unbounded">
                            <xs:complexType>
                                <xs:attribute name="name" type="xs:string" use="required" />
                                <xs:attribute name="method" type="xs:string" use="required" />
                                <xs:attribute name="needsErrorCode" type="xs:boolean" use="required" />
                            </xs:complexType>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="component.scopes">
        <xs:choice>
            <xs:element name="scope" minOccurs="1" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:attribute name="name" type="xs:string" use="required" />
                </xs:complexType>
            </xs:element>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="component.parametertokens">
        <xs:choice>
            <xs:element name="token" minOccurs="1" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:simpleContent>
                        <xs:extension base="xs:string">
                            <xs:attribute name="name" type="xs:string" use="required" />
                        </xs:extension>
                    </xs:simpleContent>
                </xs:complexType>
            </xs:element>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="component.pathparams">
        <xs:sequence>
            <xs:element name="translations">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="translation" minOccurs="1" maxOccurs="unbounded">
                            <xs:complexType>
                                <xs:attribute name="from" type="xs:string" use="required" />
                                <xs:attribute name="to" type="xs:string" use="required" />
                            </xs:complexType>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="component.vendorTags">
        <xs:choice>
            <xs:element name="vendorTag" minOccurs="1" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:attribute name="name" type="xs:string" use="required" />
                </xs:complexType>
            </xs:element>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="common.excludes">
        <xs:sequence>
            <xs:element name="exclude" minOccurs="1" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:attribute name="name" type="xs:string" use="required" />
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
</xs:schema>

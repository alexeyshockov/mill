{
    "name": "vimeo/mill",
    "description": "A PHP library for documenting a REST API with a small annotation DSL.",
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron Hedges",
            "email": "aaron@dashron.com"
        },
        {
            "name": "Jon Ursenbach",
            "email": "jon@ursenba.ch"
        }
    ],
    "minimum-stability": "stable",
    "bin": ["bin/mill"],
    "require": {
        "php": ">=7.1.0",
        "ext-xml": "*",
        "dflydev/dot-access-data": "^1.0",
        "pimple/pimple": "^3.0",
        "league/flysystem": "^1.0",
        "composer/semver": "^1.4",
        "gossi/docblock": "^1.5",
        "symfony/console": "^3.2",
        "nicmart/string-template": "^0.1.1"
    },
    "require-dev": {
        "league/flysystem-memory": "^1.0",
        "vimeo/psalm": "^0.3",
        "squizlabs/php_codesniffer": "^3.0",
        "phpunit/phpunit": "^6.1"
    },
    "suggest": {
        "ext-xml": "Required for config file processing."
    },
    "autoload": {
        "psr-4": {
            "Mill\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mill\\Examples\\": "resources/examples",
            "Mill\\Tests\\": "tests/",
            "Mill\\Tests\\Fixtures\\": "tests/_fixtures"
        }
    },
    "scripts": {
        "analysis": "psalm",
        "build-examples": [
            "rm -rf resources/examples/Showtimes/blueprints",
            "mkdir resources/examples/Showtimes/blueprints",
            "./bin/mill generate --config=resources/examples/mill.xml resources/examples/Showtimes/blueprints/",
            "./bin/mill changelog --config=resources/examples/mill.xml resources/examples/Showtimes/blueprints/"
        ],
        "check-style": "phpcs --standard=PSR2 bin/ src/ tests/",
        "coverage": "phpunit --coverage-html reports/",
        "tests": "phpunit"
    }
}

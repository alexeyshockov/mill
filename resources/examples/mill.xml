<?xml version="1.0" encoding="UTF-8"?>
<mill
    name="Mill unit test API, Showtimes"
    sinceApiVersion="1.0"
    defaultApiVersion="1.1"
    latestApiVersion="1.2"
    bootstrap="../../vendor/autoload.php"
>
    <controllers>
        <filter>
            <directory name="Showtimes/Controllers/" suffix=".php" />
        </filter>
    </controllers>

    <representations>
        <filter>
            <directory name="Showtimes/Representations/" method="create" suffix=".php"  />

            <class name="\Mill\Examples\Showtimes\Representations\Representation" noMethod="true" />

            <exclude>
                <exclude name="\Mill\Examples\Showtimes\Representations\Error" />
                <exclude name="\Mill\Examples\Showtimes\Representations\CodedError" />
                <exclude name="string" />
            </exclude>
        </filter>

        <errors>
            <class name="\Mill\Examples\Showtimes\Representations\Error" needsErrorCode="false" />
            <class name="\Mill\Examples\Showtimes\Representations\CodedError" needsErrorCode="true" />
        </errors>
    </representations>

    <scopes>
        <scope name="create" />
        <scope name="delete" />
        <scope name="edit" />
        <scope name="public" />
    </scopes>

    <capabilities>
        <capability name="BUY_TICKETS" />
        <capability name="MOVIE_RATINGS" />
        <capability name="NONE" />
    </capabilities>
</mill>
